<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.devatacreative.ayohealthy" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AyoHealthy"
        android:usesCleartextTraffic="true" >
        <activity
            android:name=".activity.DashboardActivity"
            android:label="@string/title_activity_dashboard" >
        </activity>
        <activity
            android:name=".activity.mainmenu.HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
        <activity android:name=".activity.ChangeAccountDataActivity" />
        <activity android:name=".activity.auth.RegisterActivity" />
        <activity android:name=".activity.auth.EmailLoginActivity" />
        <activity android:name=".activity.auth.LoginPickActivity" />
        <activity android:name=".activity.auth.ForgotPasswordActivity" />
        <activity
            android:name=".activity.auth.LoginActivity"
            android:noHistory="true" />
        <activity
            android:name=".activity.SplashScreenActivity"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.mainmenu.MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>